<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/txt_league_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            tools:text="Medallion" />

        <TextView
            android:id="@+id/txt_delve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_league_id"
            android:layout_alignParentStart="true"
            android:text="@string/txt_delve"
            android:textStyle="italic"
            android:visibility="invisible"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/label_date_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_delve"
            android:layout_marginTop="10dp"
            android:text="@string/label_date_start"/>

        <TextView
            android:id="@+id/label_date_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_date_start"
            android:text="@string/label_date_end"
            android:visibility="gone"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/txt_date_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_delve"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            tools:text="2016-08-10" />

        <TextView
            android:id="@+id/txt_date_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_date_start"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="2016-08-20" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/txt_forum_link"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text="@string/txt_view_on_poe"
            android:visibility="gone"
            tools:visibility="visible" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>