<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

    <TextView
        android:id="@+id/txt_league_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        tools:text="Medallion"/>

    <TextView
        android:id="@+id/txt_date_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        tools:text="2016-08-10"/>

    <TextView
        android:id="@+id/txt_date_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_date_start"
        android:layout_alignParentEnd="true"
        tools:text="2016-08-20"/>

    <TextView
        android:id="@+id/txt_forum_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_delve"
        android:layout_alignParentStart="true"
        android:autoLink="web"
        android:visibility="gone"
        tools:text="Forum Link"/>

    <TextView
        android:id="@+id/txt_delve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_league_id"
        android:layout_alignParentStart="true"
        android:text="@string/txt_delve"
        android:textStyle="italic"
        android:visibility="invisible" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>